{% extends 'base.html.twig' %}
{% block body %}
<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4">
    Liste de produits
    <!-- <small>Secondary Text</small> -->
  </h1>
  {% for product in products %}
          <!-- Project One -->
          <div class="row">
            <div class="col-md-7">
              <a href="#">
                <img class="img-fluid rounded mb-3 mb-md-0" src="http://placehold.it/700x300" alt="">
              </a>
            </div>
            <div class="col-md-5">
              <h3>{{ product.productName }}</h3>
              <p>{{ product.description|length > 200 ? product.description|striptags|slice(0, 200) ~ '...' : product.description|raw }}</p>
              <a class="btn btn-primary" href="{{ path('Product',{ 'id': product.id }) }}">DÃ©tails produit</a>
            </div>
          </div>
          <!-- /.row -->
          <hr>
  {% endfor %}

  <!-- Pagination -->

  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" {% if page == 1 %} class="disabled" {% else %} href="{{ path('Products',{ 'page': page - 1 }) }}" {% endif %} aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    {% for p in range(1, nbPages) %}
      <li {% if p == page %} class="active page-item"{% else %} class="page-item"  {% endif %} >
        <a class="page-link" href="{{ path('Products',{ 'page': p }) }}">{{ p }}</a>
      </li>
    {% endfor %}
    <li class="page-item">
      <a class="page-link" {% if page == nbPages %} class="disabled" {% else %} href="{{ path('Products',{ 'page': page + 1 }) }}" {% endif %} aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>

</div>
<!-- /.container -->
{% endblock %}
