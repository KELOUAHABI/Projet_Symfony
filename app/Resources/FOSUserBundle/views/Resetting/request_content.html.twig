{% trans_default_domain 'FOSUserBundle' %}

{% block head %}
        <title>{% block title %}Réinitialiser Mot de passe{% endblock %}</title>
        <link href="{{ asset('css/reset_pass.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
</br>
</br>
<div class="panel panel-default col-lg-4" id="div-reset">
  <div class="panel-body">
    <div class="text-center">
      <h3><i class="fa fa-lock fa-4x"></i></h3>
      <h2 class="text-center">Mot de passe oublié</h2>
      <p>Vous pouvez récuperer votre mot de passe ici.</p>
      <div class="panel-body">
        <form id="register-form" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="glyphicon glyphicon-envelope color-blue"></i>
              </span>
              <input class="form-control" type="text" id="username" name="username" placeholder="Email ou nom d'utilisateur" required="required" />
            </div>
          </div>
          <div class="form-group">
            <input name="recover-submit" value="{{ 'resetting.request.submit'|trans }}"  class="btn btn-lg btn-primary btn-block" type="submit">
          </div>

          <input type="hidden" class="hide" name="token" id="token" value="">
        </form>

      </div>
    </div>
  </div>
</div>

{% endblock %}
